---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import ScrumHero from '@components/ScrumHero.astro'
import Feature from '@components/Feature.astro'
import CallToAction from '@components/CallToAction.astro'
import { steps } from '../content/12-steps.js';
---

<DefaultLayout title="Scrum-aholics Anonymous">
  <ScrumHero />
  <section class="my-24">
    <div class="container">
      <img src="/the-path.webp" alt="The path from scrum to lean" class="w-full" />
    </div>
  </section>
  <section class="my-64" id="12-steps">
    <div class="container">
      <h2 class="mb-16 text-6xl">The 12 Steps to Recovery</h2>
      <div class="grid grid-cols-1 gap-12 md:grid-cols-2 lg:grid-cols-3">
        {steps.map(step => (
          <Feature icon={step.icon} title={step.title} number={step.number}>
            <Fragment set:html={step.content.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>').replace(/\*(.*?)\*/g, '<em>$1</em>')} />
          </Feature>
        ))}
      </div>
    </div>
  </section>
  <div id="get-help">
    <CallToAction 
      title="Need a Sponsor?"
      content="If you feel the sprint treadmill dragging you back, email lean-sherpa@scrumnonymous.org. Volunteers are standing by with Monte Carlo spreadsheets, Kanban, and a shoulder to cry on when someone schedules yet another backlog-refinement session.<br/><br/>Together we can stay Scrum-freeâ€”one day, one flow unit at a time."
      link="mailto:lean-sherpa@scrumnonymous.org"
      linkText="Get Help"
    />
  </div>
</DefaultLayout>
